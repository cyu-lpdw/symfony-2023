{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ order.name }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ order.number }}</td>
            </tr>
            <tr>
                <th>CustomerName</th>
                <td>{{ order.customerName }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ order.status }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>
                    {% set amount = 0 %}
                    {% for item in order.items %}
                        {% set amount = amount + item.amount %}
                    {% endfor %}
                    {{ amount / 100 }}
                </td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ order.endDate ? order.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Items</h2>

    <table class="table">
        <tbody>
            {% for item in order.items %}
            <tr>
                <th>{{ item.id }}</th>
                <td>{{ item.product.name }}</td>
                <td>{{ item.quantity }}</td>
                <td>{{ (item.amount - item.taxAmount) / 100 }}</td>
                <td>{{ item.amount / 100 }}</td>
                <td><a href="{{ path('app_item_show', {'id': item.id}) }}">Show item</a></td>
                <td>{{ include('item/_delete_form.html.twig') }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_order_index') }}">back to list</a>

    <a href="{{ path('app_order_edit', {'id': order.id}) }}">edit</a>

    <a href="{{ path('app_item_new', {'id': order.id}) }}">Create new item</a>

    {{ include('order/_delete_form.html.twig') }}
{% endblock %}
